<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeCity"
    android:background="@drawable/city_background">

    <ImageButton
        android:id="@+id/left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/left_button"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:src="@drawable/left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/changeCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/change_city_view"
        android:text="@string/change_city"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@+id/left_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/editText"
        android:background="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="25sp"
        android:ems="10"
        android:hint="@string/ente_city_name"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:labelFor="@+id/label"
        android:autofillHints="text"
        />

</androidx.constraintlayout.widget.ConstraintLayout>